@{
}
@model IEnumerable<Makineduruslari.Models.ArizaParcaModel>
<div class="container-fluid">
    <main class="container-row ">



        <!-- Navbar-->
        <nav class="navbar d-flex container-fluid navbar-expand-lg">
            <div class="container d-flex flex-nowrap">
                <a class="navbarimg navbar-brand " href="#">
                    <img src="https://www.qtech.com.tr/assets/img/logo.png" alt="Logo" width="40" height="40" class="d-inline-block align-text-top">
                </a>
                <div class="collapse navbar-collapse justify-content-end opacity-50 fw-bold" id="navbarNav">
                    <ul class="navbar-nav  ">
                        <li class="nav-item  ">
                            <a class="nav-link navbarLinkColor " aria-current="page" href="#"> Home </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link navbarLinkColor" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbarLinkColor" href="#">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbarLinkColor" href="#"> Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="nav py-5 border-bottom-dark body">
            <div class="container">
                <div class="row">
                    <div class="col-6 ">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">En Çok Arıza Çıkaran Parça</h5>
                                <p class="card-text"> </p>
                                <a href="#" class="btn btn-primary">Parçayı incele</a>
                            </div>
                        </div>

                    </div>

                    <div class="col-6 ">
                        <div class="card">
                            <div class="card-body">
                                <div class="pie">
                                    <div class="html">19% </div>
                                    <div class="css">81% </div>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>

                <div class="row">

                    <div class="col-6 ">

                        <table class="table" style="font-size=5; ">
                            <thead class="table-dark" style="height:10px; ">
                                <tr>
                                    <th>ID</th>
                                    <th>Arizalı Parçanın Adı</th>
                                    <th>Duruş Süresi </th>


                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach (var item in Model)
                                {
                                    <tr style="font-size:medium;">
                                        <td>@item.id</td>
                                        <td>@item.parcaadi</td>
                                        <td>@item.durussuresi</td>


                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                     <div class="col-6 ">
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ARIZALAR
                            </a>

                            <ul class="dropdown-menu">
                                
                                @foreach (var item in Model)
                                {
                                     <ul style="font-size:small;">
                                        <li><a class="dropdown-item" href="#">@item.parcaadi</a></li>
                                    </ul>
                                }
                               
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </main>
</div>
